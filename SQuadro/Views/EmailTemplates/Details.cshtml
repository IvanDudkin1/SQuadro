@using SQuadro.Models;
@model EmailTemplatesModel
@{
    Layout = null;
}
@using (Html.BeginForm("SetEmailTemplatesDetails", "EmailTemplates", FormMethod.Post, new { @class = "form-horizontal", id = "formDetail" }))
{
    @Html.HiddenFor(m => m.ID)
    @Html.HiddenFor(m => m.OrganizationID)
    @Html.ValidationSummary(true)
    <div class="form-group">
        @Html.LabelFor(m => m.Type, new { @class = "control-label col-lg-3", @for = "inputType" })
        <div class="col-lg-9">
            @Html.DropDownListFor(m => m.Type, ListsHelper.EmailTemplatesList(), new { id = "inputType", @class = "select2" })
            @Html.ValidationMessageFor(m => m.Type)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Subject, new { @class = "control-label col-lg-3", @for = "inputSubject" })
        <div class="col-lg-9">
            @Html.TextBoxFor(m => m.Subject, new { id = "inputSubject", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Subject)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Salutation, new { @class = "control-label col-lg-3", @for = "inputSalutation" })
        <div class="col-lg-9">
            @Html.TextBoxFor(m => m.Salutation, new { id = "inputSalutation", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Salutation)
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Body, new { @class = "control-label col-lg-3", @for = "inputBody" })
        <div class="col-lg-9">
            @Html.TextAreaFor(m => m.Body, new { id = "inputBody", @class = "form-control", style = "height:200px" })
            @Html.ValidationMessageFor(m => m.Body)
        </div>
    </div>    
    <div class="form-group">
        @Html.LabelFor(m => m.Signature, new { @class = "control-label col-lg-3", @for = "inputSignature" })
        <div class="col-lg-9">
            @Html.TextBoxFor(m => m.Signature, new { id = "inputSignature", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Signature)
        </div>
    </div>
}